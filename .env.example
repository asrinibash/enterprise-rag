# ========================================
# Enterprise RAG Configuration
# ========================================

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE="Enterprise RAG Knowledge Base"

# Embedding Model Settings
# Local model - NO API KEY REQUIRED
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_DEVICE=cpu  # Change to 'cuda' for GPU acceleration

# Text Processing
CHUNK_SIZE=800
CHUNK_OVERLAP=200

# Search Configuration
VECTOR_TOP_K=10
KEYWORD_TOP_K=10
HYBRID_TOP_K=5

# Hybrid Search Weights (must sum to 1.0)
VECTOR_WEIGHT=0.7
KEYWORD_WEIGHT=0.3

# LLM Settings (OPTIONAL - for answer generation)
# If not set, system will return document excerpts

# Option 1: OpenAI
# OPENAI_API_KEY=sk-your-key-here
# LLM_MODEL=gpt-3.5-turbo

# Option 2: Groq (Fast and Free!)
GROQ_API_KEY="api-key"
LLM_PROVIDER=groq
LLM_MODEL=llama-3.1-70b-versatile
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# AWS Bedrock Settings (OPTIONAL)
# Uncomment if using AWS Bedrock instead of OpenAI
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30